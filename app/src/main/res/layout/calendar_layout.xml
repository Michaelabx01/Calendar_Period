<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_custom_calndar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#EE8AF8">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/previousBtn"
            android:background="@mipmap/ic_previus"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_Date"
            android:gravity="center"
            android:text="CurrentDate"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="3"
            android:layout_marginTop="4dp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/nextBtn"
            android:background="@mipmap/ic_next"
            android:layout_margin="10dp"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="#58135E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lun."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="#4BA4A6"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mar."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="#FFFD55"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mié."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="#F08650"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jue."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="#377E47"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Vie."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="#75163F"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sáb."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="#808080"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Dom."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="#183E0C"
            android:layout_weight="1"/>


    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:background="#E6E6E6"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:id="@+id/gridView"/>



    



</LinearLayout>